---

export interface Props {
    title: string;
    tech: string[];
}

const { title, tech } = Astro.props;

---

<div class="relative group">
    <div class="bg-[#354C2B] p-4 rounded shadow-2xl transition-transform duration-300 transform group-hover:-translate-y-4 hover:scale-105">
        <h3 class="font-semibold text-lg mb-2 text-black">{title}</h3>
        <ul class="list-disc list-inside text-black">
            { tech.map( ( t ) => ( 
                <li>{ t }</li>
            ) ) }
        </ul>
    </div>
    <!-- Contenido de fondo -->
    <div class="absolute inset-0 bg-[#064a40] opacity-0 transition-opacity duration-300 group-hover:opacity-100">
        <h3 class="font-semibold text-lg text-white">Contenido de Fondo</h3>
        <p class="text-white">Este es el contenido que se muestra detr√°s.</p>
    </div>
</div>









